﻿@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Online Anket Uygulaması</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineSurveyApp.Mvc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body style="padding-bottom: 50px;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i style="margin-top: 100px;" class="bi bi-bar-chart-fill"></i> Online Anket Uygulaması</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Anketör"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Analysis" asp-action="Index">Anket Analiz</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Logout"> Çıkış Yap (@User.Identity.Name) @Html.Raw(ViewBag.LastName) </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Login"> Giriş Yap</a>
                            </li>
                        }                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="bottom: 0; width: 100%" class="border-top footer text-muted">
        <div class="container">
            <div style="display: flex; align-items: center;">
                <i style="margin-right: 5px;" class="bi bi-bar-chart-fill"></i>  Online Anket Uygulaması - Arda Odabaşı -
                <a style="text-decoration: none; margin-left: 10px;" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                <span style="margin-left: 10px;">|</span>
                @if (User.IsInRole("Admin") || User.IsInRole("Anketör"))
                {
                    <a style="text-decoration: none; margin-left: 10px;" asp-area="" asp-controller="Analysis" asp-action="Index">Anket Analiz</a>
                    <span style="margin-left: 10px;">|</span>
                }
                <a style="text-decoration: none; margin-left: 10px;" asp-controller="User" asp-action="@((User.Identity.IsAuthenticated) ? "Logout" : "Login")">
                    @((User.Identity.IsAuthenticated) ? "Çıkış Yap (" + User.Identity.Name + ")" : "Giriş Yap")
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




