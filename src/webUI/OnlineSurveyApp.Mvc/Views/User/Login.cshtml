@model OnlineSurveyApp.Mvc.Models.UserLoginViewModel

<div class="text-center">
    <h3>Giriş Yap</h3>
    <hr style="width: 200px; margin: 0 auto;" />
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="Login" asp-action-ReturnUrlParameter="@ViewBag.ReturnUrl">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <br />
                    <label for="UserName">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <label for="Password">Şifre</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Giriş Yap" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <br />
        <a style="text-decoration: none;" asp-controller="User" asp-action="SignUp">Kayıt Ol</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
